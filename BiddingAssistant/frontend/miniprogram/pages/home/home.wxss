.card {
  background: #fff;
  margin: 24rpx;
  padding: 24rpx;
  border-radius: 16rpx;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.04);
}

.title {
  font-size: 32rpx;
  font-weight: 600;
}

.btn {
  background: #1677ff;
  color: #fff;
  border: none;
}

.summary-text {
  margin-top: 12rpx;
  background: #eef3ff;
  border-radius: 12rpx;
  padding: 16rpx;
  color: #1f2937;
  line-height: 1.6;
}

.tab-nav {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}

.tab-btn {
  padding: 12rpx 24rpx;
  border-radius: 999rpx;
  background: rgba(99, 102, 241, 0.12);
  color: #3730a3;
  font-size: 26rpx;
  font-weight: 600;
}

.tab-btn.active {
  background: linear-gradient(135deg, #4c51bf, #6366f1);
  color: #fff;
  box-shadow: 0 8rpx 20rpx rgba(99, 102, 241, 0.25);
}

.tab-body {
  margin-top: 24rpx;
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.tab-item {
  border: 1rpx solid rgba(148, 163, 184, 0.35);
  border-radius: 16rpx;
  padding: 20rpx;
  background: #f9fafc;
  box-shadow: 0 10rpx 20rpx rgba(15, 23, 42, 0.06);
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.item-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  gap: 16rpx;
}

.item-title {
  font-size: 30rpx;
  font-weight: 600;
  color: #111827;
}

.priority {
  padding: 6rpx 20rpx;
  border-radius: 999rpx;
  color: #fff;
  font-size: 24rpx;
  font-weight: 600;
}

.priority.critical { background: #dc2626; }
.priority.high { background: #f97316; }
.priority.medium { background: #2563eb; }
.priority.low { background: #16a34a; }

.item-info {
  font-size: 26rpx;
  line-height: 1.6;
  color: #1f2937;
}

.item-info .label {
  font-weight: 600;
  color: #475569;
  margin-right: 8rpx;
}

.excerpt {
  background: #fff;
  border-radius: 12rpx;
  border: 1rpx solid #e2e8f0;
  padding: 16rpx;
  color: #334155;
  font-size: 24rpx;
  white-space: pre-wrap;
}

.actions {
  display: flex;
  justify-content: flex-end;
  align-items: center;
}

.source-btn {
  padding: 10rpx 24rpx;
  border-radius: 999rpx;
  background: rgba(37, 99, 235, 0.12);
  color: #1d4ed8;
  font-size: 24rpx;
  border: none;
}

.source-disabled {
  font-size: 24rpx;
  color: #94a3b8;
}

.empty {
  font-size: 24rpx;
  color: #94a3b8;
  text-align: center;
  padding: 24rpx 0;
}

.snippet-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(15, 23, 42, 0.55);
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 99;
}

.snippet-dialog {
  width: 86%;
  max-width: 640rpx;
  background: #fff;
  border-radius: 20rpx;
  padding: 24rpx;
  box-shadow: 0 20rpx 40rpx rgba(15, 23, 42, 0.25);
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.snippet-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.snippet-title {
  font-size: 30rpx;
  font-weight: 600;
}

.snippet-close {
  font-size: 36rpx;
  color: #475569;
}

.snippet-meta {
  font-size: 24rpx;
  color: #64748b;
}

.snippet-content {
  border: 1rpx solid #e2e8f0;
  border-radius: 12rpx;
  padding: 16rpx;
  max-height: 520rpx;
  overflow: auto;
  font-size: 24rpx;
  color: #334155;
}

mark {
  background: #fef08a;
  padding: 0 4rpx;
  border-radius: 4rpx;
}

.status-bar {
  margin: 24rpx;
  padding: 16rpx;
  border-radius: 12rpx;
  background: rgba(22, 119, 255, 0.08);
  color: #1677ff;
  display: flex;
  flex-direction: column;
  gap: 6rpx;
}

.job-id {
  font-size: 24rpx;
  color: #666;
}

.summary-row {
  display: flex;
  justify-content: space-between;
  margin-top: 12rpx;
  color: #555;
}

.summary-count {
  color: #1677ff;
  font-weight: 600;
}

.task-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 24rpx;
}

.mode-switch {
  display: flex;
  background: #e8edff;
  border-radius: 999rpx;
  overflow: hidden;
}

.mode-item {
  padding: 16rpx 40rpx;
  font-size: 26rpx;
  color: #4b5878;
}

.mode-item.active {
  background: #3366ff;
  color: #ffffff;
}

.refresh-btn {
  margin-left: 20rpx;
}

.task-title {
  font-size: 30rpx;
  font-weight: 600;
}

.task-meta {
  margin-top: 10rpx;
  font-size: 24rpx;
  color: #667099;
}

.task-desc {
  margin-top: 12rpx;
  color: #4b5878;
}

.task-error {
  margin-top: 12rpx;
  color: #ff4d4f;
}

.empty {
  text-align: center;
  color: #9aa4c4;
  margin-top: 120rpx;
}

/* 未登录提示样式 */
.login-prompt {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 40rpx;
  text-align: center;
}

.prompt-icon {
  font-size: 120rpx;
  margin-bottom: 40rpx;
}

.prompt-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #1a2332;
  margin-bottom: 24rpx;
}

.prompt-desc {
  font-size: 28rpx;
  color: #667099;
  line-height: 1.6;
  margin-bottom: 8rpx;
}

.prompt-actions {
  margin-top: 60rpx;
  width: 100%;
}

.btn-primary, .btn-secondary {
  width: 100%;
  margin-bottom: 24rpx;
  padding: 24rpx;
  border-radius: 12rpx;
  font-size: 30rpx;
}

.btn-primary {
  background: #3366ff;
  color: #ffffff;
}

.btn-secondary {
  background: #f5f7fa;
  color: #4b5878;
}

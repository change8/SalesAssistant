<view class="card">
  <view class="section-title">更新密码</view>
  <view class="input-label">当前密码</view>
  <input class="input-box" password placeholder="请输入当前密码"
         bindinput="onInput" data-field="currentPassword" value="{{currentPassword}}" />

  <view class="input-label">新密码</view>
  <input class="input-box" password placeholder="至少 8 位，含字母和数字"
         bindinput="onInput" data-field="newPassword" value="{{newPassword}}" />

  <view class="input-label">确认新密码</view>
  <input class="input-box" password placeholder="再次输入新密码"
         bindinput="onInput" data-field="confirmPassword" value="{{confirmPassword}}" />

  <button class="btn" loading="{{loading}}" bindtap="onSubmit">确认修改</button>
</view>

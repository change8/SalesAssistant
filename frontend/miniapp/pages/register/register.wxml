<view class="card">
  <view class="section-title">创建新账号</view>
  <view class="input-label">手机号</view>
  <input class="input-box" type="number" maxlength="11" placeholder="请输入 11 位手机号"
         bindinput="onInput" data-field="phone" value="{{phone}}" />

  <view class="input-label">用户名</view>
  <input class="input-box" placeholder="请输入用户名" bindinput="onInput" data-field="username" value="{{username}}" />

  <view class="input-label">密码</view>
  <input class="input-box" password placeholder="至少 8 位，含字母和数字"
         bindinput="onInput" data-field="password" value="{{password}}" />

  <view class="input-label">确认密码</view>
  <input class="input-box" password placeholder="再次输入密码"
         bindinput="onInput" data-field="confirmPassword" value="{{confirmPassword}}" />

  <button class="btn" loading="{{loading}}" bindtap="onSubmit">注册</button>
</view>

.profile-card {
  margin-bottom: 0;
}

.profile-row {
  display: flex;
  justify-content: space-between;
  margin-bottom: 16rpx;
  font-size: 28rpx;
  color: #4b5878;
}

.profile-row .label {
  font-weight: 600;
  color: #1f2a44;
}

.action-card {
  margin-top: 20rpx;
}

.action-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx 0;
  border-bottom: 1px solid #eef2ff;
  font-size: 28rpx;
  color: #1f2a44;
}

.action-item:last-child {
  border-bottom: none;
}

.arrow {
  font-size: 32rpx;
  color: #9aa4c4;
}

.logout-btn {
  margin: 60rpx 24rpx;
  background: #ff4d4f;
}

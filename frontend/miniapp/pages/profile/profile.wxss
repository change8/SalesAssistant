.profile-card {
  margin-bottom: 0;
}

.profile-row {
  display: flex;
  justify-content: space-between;
  margin-bottom: 16rpx;
  font-size: 28rpx;
  color: #4b5878;
}

.profile-row .label {
  font-weight: 600;
  color: #1f2a44;
}

.action-card {
  margin-top: 20rpx;
}

.action-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx 0;
  border-bottom: 1px solid #eef2ff;
  font-size: 28rpx;
  color: #1f2a44;
}

.action-item:last-child {
  border-bottom: none;
}

.arrow {
  font-size: 32rpx;
  color: #9aa4c4;
}

.logout-btn {
  margin: 60rpx 24rpx;
  background: #ff4d4f;
}

/* 游客提示样式 */
.guest-prompt {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 40rpx;
  text-align: center;
}

.guest-prompt .prompt-icon {
  font-size: 120rpx;
  margin-bottom: 40rpx;
}

.guest-prompt .prompt-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #1a2332;
  margin-bottom: 24rpx;
}

.guest-prompt .prompt-desc {
  font-size: 28rpx;
  color: #667099;
  margin-bottom: 16rpx;
}

.guest-prompt .prompt-actions {
  margin-top: 60rpx;
  width: 100%;
}

.guest-prompt .btn-primary, .guest-prompt .btn-secondary {
  width: 100%;
  margin-bottom: 24rpx;
  padding: 24rpx;
  border-radius: 12rpx;
  font-size: 30rpx;
}

.guest-prompt .btn-primary {
  background: #3366ff;
  color: #ffffff;
}

.guest-prompt .btn-secondary {
  background: #f5f7fa;
  color: #4b5878;
}

.guest-tip {
  margin-top: 40rpx;
  font-size: 24rpx;
  color: #9aa4c4;
}

page {
  background-color: #f8faff;
}

.container {
  padding: 32rpx;
}

/* Profile Card */
.profile-card {
  background: linear-gradient(135deg, #ffffff 0%, #f9fafb 100%);
  border-radius: 32rpx;
  padding: 48rpx;
  margin-bottom: 32rpx;
  box-shadow: 0 12rpx 32rpx rgba(51, 102, 255, 0.08);
  border: 2rpx solid rgba(255, 255, 255, 0.8);
  text-align: center;
}

.avatar-wrapper {
  width: 140rpx;
  height: 140rpx;
  margin: 0 auto 24rpx;
  background: linear-gradient(135deg, #3366ff 0%, #6366f1 100%);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 64rpx;
  color: white;
  box-shadow: 0 8rpx 24rpx rgba(51, 102, 255, 0.25);
}

.user-name {
  font-size: 36rpx;
  font-weight: 700;
  color: #1f2937;
  margin-bottom: 8rpx;
}

.user-role {
  font-size: 24rpx;
  color: #6b7280;
  background: rgba(0, 0, 0, 0.05);
  padding: 4rpx 16rpx;
  border-radius: 20rpx;
  display: inline-block;
}

/* Action Card */
.action-card {
  background: white;
  border-radius: 24rpx;
  padding: 0 32rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.02);
}

.action-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 32rpx 0;
  border-bottom: 1rpx solid #f3f4f6;
  font-size: 30rpx;
  color: #374151;
}

.action-item:last-child {
  border-bottom: none;
}

.action-item:active {
  opacity: 0.7;
}

.arrow {
  font-size: 32rpx;
  color: #d1d5db;
}

/* Logout Button */
.logout-btn {
  margin: 60rpx 32rpx;
  background: #fee2e2;
  color: #dc2626;
  border-radius: 40rpx;
  font-size: 30rpx;
  font-weight: 500;
  padding: 24rpx 0;
}

.logout-btn:active {
  background: #fecaca;
}

/* Guest Prompt */
.guest-prompt {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 40rpx;
  text-align: center;
}

.guest-prompt .prompt-icon {
  font-size: 120rpx;
  margin-bottom: 40rpx;
}

.guest-prompt .prompt-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #1f2937;
  margin-bottom: 24rpx;
}

.guest-prompt .prompt-desc {
  font-size: 28rpx;
  color: #6b7280;
  margin-bottom: 16rpx;
}

.guest-prompt .prompt-actions {
  margin-top: 60rpx;
  width: 100%;
}

.guest-prompt .btn-primary, .guest-prompt .btn-secondary {
  width: 100%;
  margin-bottom: 24rpx;
  padding: 24rpx;
  border-radius: 40rpx;
  font-size: 30rpx;
  font-weight: 500;
}

.guest-prompt .btn-primary {
  background: linear-gradient(135deg, #3366ff 0%, #6366f1 100%);
  color: #ffffff;
  box-shadow: 0 8rpx 20rpx rgba(51, 102, 255, 0.2);
}

.guest-prompt .btn-secondary {
  background: #f3f4f6;
  color: #4b5563;
}

.guest-tip {
  margin-top: 40rpx;
  font-size: 24rpx;
  color: #9ca3af;
}

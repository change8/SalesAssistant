<view class="card">
  <view class="section-title">欢迎登录</view>
  <view class="input-label">手机号</view>
  <input class="input-box" placeholder="请输入 11 位手机号" type="number" maxlength="11"
         value="{{phone}}" bindinput="onPhoneInput" />

  <view class="input-label">密码</view>
  <input class="input-box" placeholder="请输入密码" password value="{{password}}" bindinput="onPasswordInput" />

  <button class="btn" loading="{{loading}}" bindtap="onLogin">登录</button>
  <view class="helper">
    <text>还没有账号？</text>
    <text class="link" bindtap="onGoRegister">立即注册</text>
  </view>
</view>

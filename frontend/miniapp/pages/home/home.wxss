page {
  background-color: #f8faff;
  padding-bottom: 40rpx;
}

.container {
  padding: 32rpx;
}

/* Welcome Card */
.welcome-card {
  background: linear-gradient(135deg, #3366ff 0%, #6366f1 100%);
  border-radius: 32rpx;
  padding: 48rpx;
  margin-bottom: 48rpx;
  box-shadow: 0 20rpx 40rpx rgba(51, 102, 255, 0.2);
  position: relative;
  overflow: hidden;
  color: white; /* All text white */
}

/* Add subtle decorative circle */
.welcome-card::after {
  content: '';
  position: absolute;
  top: -50%;
  right: -20%;
  width: 400rpx;
  height: 400rpx;
  background: rgba(255, 255, 255, 0.1);
  border-radius: 50%;
  pointer-events: none;
}

.welcome-header {
  margin-bottom: 32rpx;
}

.welcome-subtitle {
  font-size: 28rpx;
  opacity: 0.9;
  margin-bottom: 12rpx;
  font-weight: 500;
}

.user-name {
  font-size: 56rpx;
  font-weight: 700;
  line-height: 1.2;
}

.greeting-content {
  font-size: 28rpx;
  line-height: 1.6;
  opacity: 0.9;
  background: rgba(255, 255, 255, 0.15); /* More subtle background for text block */
  padding: 24rpx;
  border-radius: 16rpx;
  backdrop-filter: blur(4px);
}

/* Section Title */
.section-title {
  font-size: 34rpx;
  font-weight: 600;
  color: #1f2937;
  margin-bottom: 32rpx;
  padding-left: 8rpx;
}

/* Action Grid - 5 in a row */
.action-grid {
  display: flex;
  justify-content: space-between;
  gap: 16rpx;
  margin-bottom: 40rpx;
}

.action-card {
  flex: 1;
  background: white;
  border-radius: 16rpx;
  padding: 24rpx 8rpx;
  text-align: center;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.02);
  border: 1rpx solid rgba(255, 255, 255, 0.6);
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  min-width: 0; /* Allow shrinking */
}

.action-card:active {
  transform: scale(0.96);
  background: #f9fafb;
}

.action-icon {
  font-size: 48rpx;
  margin-bottom: 12rpx;
}

.action-title {
  font-size: 24rpx;
  font-weight: 600;
  color: #1f2937;
  margin-bottom: 4rpx;
  white-space: nowrap;
}

.action-desc {
  font-size: 18rpx;
  color: #9ca3af;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  width: 100%;
  display: none; /* Hide description for 5-column layout as it's too narrow */
}

/* Recent Activity */
.recent-activity {
  background: #ffffff;
  border-radius: 24rpx;
  padding: 0;
  min-height: 200rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.02);
  display: block; /* Change from flex to block for list */
}

.empty-state {
  text-align: center;
  color: #9ca3af;
  padding: 48rpx;
}

.empty-icon {
  font-size: 64rpx;
  margin-bottom: 16rpx;
  opacity: 0.5;
}

.empty-text {
  font-size: 28rpx;
}

/* History Item */
.history-item {
  display: flex;
  align-items: center; /* Center items vertically */
  padding: 24rpx 32rpx; /* Reduced vertical padding */
  border-bottom: 1rpx solid #f3f4f6;
  transition: all 0.2s;
}

.history-item:last-child {
  border-bottom: none;
}

.history-item:active {
  background: #f9fafb;
}

.history-icon {
  width: 80rpx;
  height: 80rpx;
  background: #f3f4f6;
  border-radius: 50%; /* Circle */
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 36rpx;
  margin-right: 24rpx;
  color: #6b7280;
  flex-shrink: 0; /* Prevent icon shrinking */
}

.history-content {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  overflow: hidden; /* For ellipsizing if needed */
}

.history-title {
  margin-bottom: 8rpx;
  display: flex;
  align-items: center;
}

.history-type {
  font-size: 20rpx;
  color: #3366ff;
  background: rgba(51, 102, 255, 0.1);
  padding: 2rpx 10rpx;
  border-radius: 6rpx;
  margin-right: 12rpx;
  font-weight: 500;
  flex-shrink: 0;
}

.history-query {
  font-size: 28rpx;
  color: #1f2937;
  font-weight: 600;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.history-tags {
  display: flex;
  align-items: center;
  flex-wrap: wrap;
  gap: 8rpx; /* Gap between tags */
}

.history-tags .tag {
  font-size: 20rpx;
  color: #6b7280;
  background: #f3f4f6;
  padding: 2rpx 12rpx;
  border-radius: 20rpx;
}

/* Time on the far right, vertically centered */
.history-time {
  font-size: 22rpx;
  color: #9ca3af;
  margin-left: 16rpx;
  flex-shrink: 0;
}

.history-arrow {
  color: #d1d5db;
  font-size: 24rpx;
  margin-left: 12rpx;
  flex-shrink: 0;
}
